<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <Button
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_service_signin"
            android:drawableStart="@drawable/ic_google"
            android:paddingStart="18dp"
            android:paddingEnd="35dp"
            android:text="Sign in with Google"
            android:textAllCaps="false" />

        <Button
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_service_signin"
            android:drawableStart="@drawable/ic_facebook"
            android:paddingStart="18dp"
            android:paddingEnd="35dp"
            android:text="Sign in with Facebook"
            android:textAllCaps="false" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:background="@drawable/img_line"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="53dp"
        android:layout_height="31dp"
        android:layout_marginBottom="41dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="OR"
        android:textColor="#A4090A0A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_reg_form"
            android:hint="Email Address"
            android:paddingStart="20dp"
            android:textAlignment="2"
            android:textAllCaps="false"
            android:textColorHint="#1C2439"
            android:textSize="15sp" />

        <EditText
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_reg_form"
            android:drawableEnd="@drawable/ic_eye_slash"
            android:hint="Password"
            android:paddingStart="20dp"
            android:paddingEnd="25dp"
            android:textAlignment="2"
            android:textAllCaps="false"
            android:textColorHint="#1C2439"
            android:textSize="15sp" />

        <EditText
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:layout_marginBottom="47dp"
            android:background="@drawable/btn_reg_form"
            android:hint="Confirm Password"
            android:paddingStart="20dp"
            android:textAlignment="2"
            android:textAllCaps="false"
            android:textColorHint="#1C2439"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:backgroundTint="#F71B33"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Log in"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_marginTop="66dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_left" />

        <TextView
            android:layout_width="291dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="#090A0A"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>